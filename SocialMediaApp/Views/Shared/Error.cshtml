@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h1 class="text-danger">Oops! Something went wrong.</h1>
    <p class="lead">We couldn't process your request. Please try again later.</p>

    @if (Model.ShowRequestId)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }

    <a href="/" class="btn btn-primary mt-3">Go Back to Home</a>
</div>
