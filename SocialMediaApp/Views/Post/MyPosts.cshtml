@model List<SocialMediaApp.Models.PostDto>

<div class="container">
    <h1>My Posts</h1>

    <a href="@Url.Action("Index", "Post", new { filter = "all" })" class="btn btn-secondary mb-3">Back to All Posts</a>

    @if (Model != null && Model.Any())
    {
        <ul class="list-group">
            @foreach (var post in Model)
            {
                <li class="list-group-item">
                    <h5>@post.Title</h5>
                    <p>@post.Content</p>
                    <small>@post.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>

                    <form method="post" action="@Url.Action("DeletePost", "Post", new { id = post.Id })" style="display:inline;">
                        <input type="hidden" name="__method" value="DELETE" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No posts available.</p>
    }
</div>
